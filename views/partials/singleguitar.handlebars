<div class="col mb-5">
    <div class="card h-100">

        <!-- Product image-->
        <img class="card-img-top" src="./assets/guitarPictures/8.png" alt="..." />
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">

                <!-- Product name-->

                <h2>{{guitar_type}}</h2>
                <p>{{guitar_brand}}</hp>
                <hp>{{price}}</hp>
                <hp>{{comment_text}}</hp>

                <!-- Product price-->



            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
        </div>
    </div>
</div>